@model IEnumerable<WebApplication1.EF.Models.Quiz>
@{
    ViewData["Title"] = "Home Page";
}
@if ((TempData["Message"] as string)?.Length > 0)
{
    <div class="alert alert-warning alert-dismissible">
        @TempData["Message"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<div>
    <h2>Создать тест</h2>
    <form class="form-group form-inline" asp-controller="Home" asp-action="CreateQuiz">
        <input class="form-control flex-grow-1 mr-2 w-auto" name="Name" placeholder="Название">
        <button type="submit" class="btn btn-primary">Создать</button>
    </form>
</div>
<div>
    <partial name="QuizListPartial"/>
</div>